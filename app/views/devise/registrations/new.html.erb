<div class="offset-4 col-4 authentication-inner py-5">
  <div class="card">
    <div class="p-4 p-sm-5">
      <div class="d-flex justify-content-center align-items-center pb-2 mb-4">
        <%= image_tag('cover.jpg', style: 'height: 90px;') %>
      </div>

      <% if alert %>
        <div class="d-flex justify-content-center">
          <p class="text-danger"><%= alert %></p>
        </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'layouts/form_errors', record: resource %>
        <div class="form-group">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :phone, class: 'form-label' %>
          <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :avatar, class: 'form-label' %>
          <%= f.file_field(:avatar) %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "CPF", class: 'form-label' %>
          <%= f.text_field :cpf, autofocus: true, autocomplete: "cpf", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "RG", class: 'form-label' %>
          <%= f.text_field :rg, autofocus: true, autocomplete: "rg", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Rua", class: 'form-label' %>
          <%= f.text_field :road, autofocus: true, autocomplete: "rua", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Bairro", class: 'form-label' %>
          <%= f.text_field :neighborhood, autofocus: true, autocomplete: "bairro", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Numero", class: 'form-label' %>
          <%= f.text_field :number, autofocus: true, autocomplete: "numero", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Complemento", class: 'form-label' %>
          <%= f.text_field :complement, autofocus: true, autocomplete: "complemento", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "CEP", class: 'form-label' %>
          <%= f.text_field :cep, autofocus: true, autocomplete: "cep", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Cidade", class: 'form-label' %>
          <%= f.text_field :city, autofocus: true, autocomplete: "cidade", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Estado", class: 'form-label' %>
          <%= f.text_field :state, autofocus: true, autocomplete: "estado", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Renda", class: 'form-label' %>
          <%= f.text_field :income, autofocus: true, autocomplete: "renda", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Patrimônio", class: 'form-label' %>
          <%= f.text_field :patrimony, autofocus: true, autocomplete: "patrimonio", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Sexo", class: 'form-label' %>
          <%= f.text_field :sex, autofocus: true, autocomplete: "sexo", class:" form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Senha de Transferências", class: 'form-label' %>
          <%= f.password_field :password_card, class:" form-control" %>
        </div>
        <br>
        <div class="d-flex justify-content-center align-items-center m-0">
          <%= f.submit 'Cadastrar', class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= link_to new_user_session_path, class: "d-flex justify-content-center align-items-center mt-4" do %>
        Logar
      <% end %>
    </div>
  </div>
</div>
